<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title>EiotDashboard</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=ABeeZee">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.12.0/css/all.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.5.2/animate.min.css">
    <link rel="stylesheet" href="assets/css/styles.css">
</head>

<body style="background: rgb(58,57,75);">
    <nav class="navbar navbar-dark navbar-expand-md bg-dark py-3">
        <div class="container"><a class="navbar-brand d-flex align-items-center" href="#"><span class="bs-icon-sm bs-icon-rounded bs-icon-primary d-flex justify-content-center align-items-center me-2 bs-icon"><svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" fill="currentColor" viewBox="0 0 16 16" class="bi bi-hdd-network" style="transform: scale(1.83);">
                        <path d="M4.5 5a.5.5 0 1 0 0-1 .5.5 0 0 0 0 1zM3 4.5a.5.5 0 1 1-1 0 .5.5 0 0 1 1 0z"></path>
                        <path d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v1a2 2 0 0 1-2 2H8.5v3a1.5 1.5 0 0 1 1.5 1.5h5.5a.5.5 0 0 1 0 1H10A1.5 1.5 0 0 1 8.5 14h-1A1.5 1.5 0 0 1 6 12.5H.5a.5.5 0 0 1 0-1H6A1.5 1.5 0 0 1 7.5 10V7H2a2 2 0 0 1-2-2V4zm1 0v1a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V4a1 1 0 0 0-1-1H2a1 1 0 0 0-1 1zm6 7.5v1a.5.5 0 0 0 .5.5h1a.5.5 0 0 0 .5-.5v-1a.5.5 0 0 0-.5-.5h-1a.5.5 0 0 0-.5.5z"></path>
                    </svg></span><span>EioT - The DIY Framework</span></a><button data-bs-toggle="collapse" class="navbar-toggler" data-bs-target="#navcol-5"><span class="visually-hidden">Toggle navigation</span><span class="navbar-toggler-icon"></span></button>
            <div class="collapse navbar-collapse" id="navcol-5">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link active" href="#">Dashboard</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Settings</a></li>
                    <li class="nav-item"></li>
                </ul><a class="btn btn-primary ms-md-2" role="button" href="#">Logout</a>
            </div>
        </div>
    </nav>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <section class="py-4 py-xl-5">
                    <div class="container">
                        <div class="bg-light border rounded border-0 border-light d-flex flex-column justify-content-between flex-lg-row p-4 p-md-5">
                            <div class="pb-2 pb-lg-1">
                                <h2 class="fw-bold mb-2">EioT - The new DIY Framework</h2>
                                <p class="mb-0">SIMPLICITY. EFFICIENCY. DIY.</p>
                            </div>
                            <div class="my-2"><svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" fill="currentColor" viewBox="0 0 16 16" class="bi bi-hdd-network fs-1" style="transform: scale(2.14);">
                                    <path d="M4.5 5a.5.5 0 1 0 0-1 .5.5 0 0 0 0 1zM3 4.5a.5.5 0 1 1-1 0 .5.5 0 0 1 1 0z"></path>
                                    <path d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v1a2 2 0 0 1-2 2H8.5v3a1.5 1.5 0 0 1 1.5 1.5h5.5a.5.5 0 0 1 0 1H10A1.5 1.5 0 0 1 8.5 14h-1A1.5 1.5 0 0 1 6 12.5H.5a.5.5 0 0 1 0-1H6A1.5 1.5 0 0 1 7.5 10V7H2a2 2 0 0 1-2-2V4zm1 0v1a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V4a1 1 0 0 0-1-1H2a1 1 0 0 0-1 1zm6 7.5v1a.5.5 0 0 0 .5.5h1a.5.5 0 0 0 .5-.5v-1a.5.5 0 0 0-.5-.5h-1a.5.5 0 0 0-.5.5z"></path>
                                </svg></div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <form>
                    <label class="form-label" style="color: rgb(253,253,254);font-size: 18px;">IFTT Webhook
                    <input class="form-control form-control-sm" type="text" id="webhook_address" style="width: 417px;"></label>
                    <label class="form-label" style="margin-right: 0px;padding-left: 11px;color: rgb(255,255,255);">Category
                        <select id="category" class="form-select form-select-sm" style="margin-right: 0px;padding-left: 11px;">
                            <optgroup label="Sensor Category">
                                <option value="thermostat" selected="">Thermostat</option>
                                <option value="motionsensor">Motion Sensor</option>
                            </optgroup>
                        </select>
                    </label>
                    <button class="btn btn-success btn-sm" data-bss-hover-animate="tada" type="button" onclick="addWebhook();" style="padding-left: 8px;margin-left: 9px;margin-bottom: 4px;">Add Webhook</button></form>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <hr class="rubberBand animated" style="color: var(--bs-pink);height: 8px;border-style: dotted;border-color: var(--bs-indigo);">
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="table-responsive bounce animated">
                    <table class="table table-striped table-hover table-sm">
                        <caption style="color: rgb(254,254,254);" class="caption-top">List of all created webhooks</caption>
                        <thead style="color: rgb(220,202,248);">
                            <tr>
                                <th>ID</th>
                                <th>Webhook-Address</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody style="color: rgb(252,252,252);">
                            <% webhooks.forEach(function(webhook) { %>
                                <tr>
                                    <td style="color: rgb(248,249,251);"><%= webhook.id %></td>
                                    <td style="color: rgb(248,249,251);"><%= webhook.address %> <span class="badge rounded-pill text-bg-primary"><%= webhook.category %></span></td>
                                    <td><div class="btn-group" role="group"><button class="btn btn-warning" onclick="deleteWebhook('<%= webhook.id %>')" type="button">Delete</button></div>
                                    </td>
                                </tr>            
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="assets/js/bs-init.js"></script>
    <script>
        function addWebhook(){
            var address = document.getElementById("webhook_address").value;
            var cat = document.getElementById("category").value
            $.ajax({ 
                type: 'GET',
                url: '/settings/addWebhook/' + btoa(address) + '/' + cat,
                async: false,
                success: function(d){
                    response = d;
                    console.log(d);
                    location.reload();
                }
            });
        }
        function deleteWebhook(id){
            $.ajax({ 
                type: 'GET',
                url: '/settings/deleteWebhook/' + id,
                async: false,
                success: function(d){
                    response = d;
                    console.log(d);
                    location.reload();
                }
            });
        }
    </script>
</body>

</html>